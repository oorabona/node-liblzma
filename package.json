{
  "name": "node-liblzma",
  "version": "1.1.0",
  "description": "NodeJS wrapper for liblzma",
  "main": "./lib/lzma.js",
  "scripts": {
    "install": "node-gyp-build",
    "prepare": "npx ynpx coffeescript --compile --output lib/ src/",
    "prebuildify": "npx prebuildify --napi --strip -t $(node -v)",
    "prebuildify:win": "for /f \"usebackq tokens=*\" %v in (`node -v`) do npx prebuildify -t %v --napi --strip",
    "test": "mocha test/*.coffee"
  },
  "dependencies": {
    "node-addon-api": "4.2.0",
    "node-gyp-build": "4.3.0"
  },
  "devDependencies": {
    "coffeescript": "2.6.1",
    "expect.js": "0.3.1",
    "mocha": "9.2.1",
    "tsd": "0.19.1"
  },
  "types": "index.d.ts",
  "engines": {
    "node": ">12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oorabona/node-liblzma"
  },
  "keywords": [
    "module",
    "lzma",
    "lzma2",
    "xz",
    "unxz",
    "compress",
    "uncompress",
    "decompress",
    "filters",
    "binding",
    "native"
  ],
  "gypfile": true,
  "author": "Olivier ORABONA",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/oorabona/node-liblzma/issues"
  },
  "homepage": "https://github.com/oorabona/node-liblzma",
  "binary": {
    "module_name": "liblzma"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "mocha": {
    "throw-deprecation": true,
    "require": [
      "coffeescript/register"
    ],
    "inline-diffs": true,
    "timeout": 5000,
    "reporter": "spec",
    "recursive": true
  }
}
