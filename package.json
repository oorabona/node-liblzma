{
  "name": "node-liblzma",
  "version": "0.0.0",
  "description": "NodeJS wrapper for liblzma",
  "type": "module",
  "main": "./lib/lzma.js",
  "exports": {
    ".": {
      "import": "./lib/lzma.js",
      "types": "./index.d.ts"
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepare": "simple-git-hooks && pnpm run build",
    "prebuildify": "pnpm exec prebuildify --napi --strip -t $(node -v)",
    "prebuildify:win": "for /f \"usebackq tokens=*\" %v in (`node -v`) do pnpm exec prebuildify -t %v --napi --strip",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf lib",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:write": "biome format --write",
    "check": "biome check",
    "check:write": "biome check --write"
  },
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp-build": "^4.8.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.13.1",
    "tsd": "^0.33.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "types": "index.d.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oorabona/node-liblzma"
  },
  "keywords": [
    "module",
    "lzma",
    "lzma2",
    "xz",
    "unxz",
    "compress",
    "uncompress",
    "decompress",
    "filters",
    "binding",
    "native"
  ],
  "gypfile": true,
  "author": "Olivier ORABONA",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/oorabona/node-liblzma/issues"
  },
  "homepage": "https://github.com/oorabona/node-liblzma",
  "binary": {
    "module_name": "liblzma"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "nano-staged": {
    "*.{ts,js,mts,cts}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.json": [
      "biome format --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec nano-staged"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
